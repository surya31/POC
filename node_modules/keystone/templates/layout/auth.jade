block variables
	- var theTitle = titleVar ? titleVar : ""
include ../mixins/flashMessages

doctype html
html
	head
		meta(charset="utf-8")
		meta(name="viewport", content="initial-scale=1.0,user-scalable=no,maximum-scale=1,width=device-width")
		title #{theTitle} | #{brand ? brand : 'Keystone'}
		link(rel="stylesheet", href="/keystone/styles/auth.min.css")
		link(href="/styles/site.min.css", rel="stylesheet")
		link(rel="shortcut icon", href="/favicon.ico", type="image/x-icon")
		block css
			
	body: .container-fluid(style="padding-left: 0; padding-right: 0")
		nav.navbar.navbar-default(role="navigation" style="border: none")
				.container
					.navbar-header
						button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
					a.navbar-brand(href="/")
						img(src="/images/top-logo.png")
					if user
						.collapse.navbar-collapse
							ul.nav.navbar-nav.navbar-left
								span(style="background-color: #cfb27c;padding: 6px 12px;color: #fff;margin-top: 19.4px;").glyphicon.glyphicon-menu-hamburger.pull-left
								input(type="text" placeholder="Search Influencers, Issues and Locations" style="width: 270px; margin-top: 20px").pull-left
								span(style="background-color: #cfb27c;padding: 6px 12px;color: #fff;margin-top: 19.4px;").glyphicon.glyphicon-search.pull-left
							ul.nav.navbar-nav.navbar-right(style="margin-top: 6px;")
									li(style="margin-right: 50px"): a(href="#") 
										img(src="/images/highlights-icon.png" style="padding-right: 10px") 
										span(style="color: #cfb27c") Highlights
									li: a(href="#")
										img(src="/images/home-icon.png")
									li: a(href="#")
										img(src="/images/notification-icon.png")
									li(style="margin-right: 40px"): a(href="#")
										img(src="/images/message-icon.png")
									li.dropdown
										a.dropdown-toggle(href="#" data-toggle="dropdown")
											img(src="/images/profile-picture-left-menu.png")
											b.caret
										ul.dropdown-menu
											if user
												if user.canAccessKeystone
													li: a(href='/admin') Go to Admin Area
												li: a(href="/profile") My Profile
												li: a(href="#") Edit Profile
												li: a(href="#") Settings
												li.divider
												li: a(href='/admin/signout') Sign Out
											else
												li: a(href='/admin/signin') Sign In
												li: a(href='/admin/register') Register
		style.
			html, body {
			background: url('/images/loginbg.png');
			height: 100%;
			background-repeat: no-repeat;
			background-size: cover;
			background-position: 0;
			}

			#body,
			.container {
				background: none !important;
			}

		.auth-wrapper
		
			+flash-messages(messages)
			if !messages
				.alert.alert-placeholder &nbsp;
			.auth-body(class=messages && messages.error.length ? 'has-errors' : null)
				block content
			
			block footer
				.auth-footer
			
			//- Page Scripts
			block js
			
			//- Google Analytics
			if env == 'production' && ga.property && ga.domain
				script.
					(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
					(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
					m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
					})(window,document,'script','//www.google-analytics.com/analytics.js','ga');
					ga('create', '#{ga.property}', '#{ga.domain}');
					ga('send', 'pageview');
