				.row.voice.voice-user
						.block.block-head.row(style="padding: 0")
							.col-md-6
								span.cat.pull-left(style="padding-right: 5px") Healthcare
								span.mention.pull-left  | @BarrackObama
							.col-md-6
								img.pull-right(src="/images/3-dots-icon.png")
						hr
						.block.block-user.row
							.col-md-1
								img(src="/images/sidhanth-comment-profile-image.png")
							.col-md-11
								p.user-name(style="padding-left: 25px") #{user.name.first} #{user.name.last}
								p.user-location(style="padding-left: 25px") Chicago, Illinois
						.block.block-headline.row
							.col-md-12
								b America needs an universal healthcare program
						.block.block-agree-disagree.row(style="display: block; margin: 0 auto")
							.col-md-3
								button.btn.btn-agree
