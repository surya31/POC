extends ../layouts/default

block content
		include ./map.jade
		include ./indices.jade
		.container(style="background-color: #cecece; padding: 30px 0")
			include ./sidebars/sidebar-left.jade
			.col-md-6
				if user
					.row.voice(style="padding-bottom: 20px")
						.voice-top.row(style="margin-left: 0; margin-right: 0")
							.col-md-3
								img.pull-left(src="/images/sidhant-profile-image.png" style="margin-top: 20px;")
							.col-md-7.col-md-offset-1(style="margin-top: 15px; margin-left: 10%;")
								span.user-name(style="padding: 0") #{user.name.first} #{user.name.last}
								img.pull-right(src="/images/support-icon.png" style="margin-right: -32px")
								p.user-location(style="padding: 0") #{user.location}
								hr
								p.work #{user.post} at 
									b #{user.company}.
								p.edu #{user.qualification} from 
									b #{user.university}
								p.party Party Affiliated with 
									b #{user.party}
								p.view-full View Full Profile
						hr.full-dark
						.voice-bottom.col-md-12(style="font-size: 20px")
							.col-md-4
								.voice-stat(style="color: #991b1c; border-bottom: 4px solid #991b1c; margin-bottom: 10px;")
									p(style="text-align: left;") 04
									p(style="text-align: left;") VOICES
							.col-md-4
								.supporters-stat(style="color: #424242; border-bottom: 4px solid #424242; margin-bottom: 10px;")
									p(style="text-align: left;") 14
									p(style="text-align: left;") SUPPORTERS
							.col-md-4
								.supporting-stat(style="color: #424242; border-bottom: 4px solid #424242; margin-bottom: 10px")
									p(style="text-align: left;") 32
									p(style="text-align: left;") SUPPORTING
						hr.full-dark
						.col-md-2
							img(src="/images/sidhanth-comment-profile-image.png")
						.col-md-10
							input.write-comment(type="text" placeholder="Raise your voice" style="width: 100%")
				.row.voice.voice-user
					.block.block-head.row(style="padding: 0")
						.col-md-10
							span.cat.pull-left(style="padding-right: 5px") Elections
							span.mention.pull-left  | @StenyHoyer, @DebbieShultz 
							span.mention.more.pull-left(style="padding-left: 5px")  & more
						.col-md-2
							img.pull-right(src="/images/3-dots-icon.png")
					hr
					.block.block-user.row
						.col-md-1
							img(src="/images/sidhanth-comment-profile-image.png")
						.col-md-11
							p.user-name(style="padding-left: 25px") #{user.name.first} #{user.name.last}
							p.user-location(style="padding-left: 25px") Chicago, Illinois
					.block.block-headline.row
						.col-md-12
							b Both the democrats and the republicans should fix their nomination systems!
					.block.block-image.row
						img(src="/images/sidhanth-voice-1.png" style="display: block; margin: 0 auto")
					.block.block-agree-disagree.row(style="display: block; margin: 0 auto")
						.col-md-3
							button.btn.btn-agree
								img(src="/images/Politician_42.png")
							span.agree 6930
						.col-md-6
							progress(value="6930" max="7862")
						.col-md-3
							span.disagree 932
							button.btn.btn-disagree
								img(src="/images/Politician_45.png")
						hr
						.col-md-12(style="padding-bottom: 20px")

							input.write-comment(type="text" placeholder="Write a comment." style="width: 100%")
